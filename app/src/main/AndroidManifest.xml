            android:name="ui.loading.LoadingUI"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ui.help.HelpUI" />
        <activity android:name="components.auth.AuthMessageActivity" />
        <activity android:name="components.auth.RegisterActivity" />
        <activity android:name="components.auth.PasswordRecoveryActivity" />
        <activity android:name="components.auth.LoginActivity" />
        <activity android:name="components.ranking.RankingActivity" />
