<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondojuego3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/lblpregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completa la oraciÃ³n"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgicono"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/lblpregunta"
            android:layout_gravity="center"
            android:layout_marginLeft="-29dp"
            android:src="@drawable/rubit" />

        <EditText
            android:id="@+id/txtRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgicono"
            android:hint="Respuesta"
            android:textColorHint="@color/white"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lbloracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txtRespuesta"
            android:layout_below="@id/lblpregunta"
            android:layout_alignRight="@id/lblpregunta"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="prueba para las preguntas "
            android:textAlignment="center"
            android:textColorHint="@color/teal_200"
            android:textSize="16dp"
            android:textStyle="italic" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint=""
            android:onClick="replyButton"
            android:textColorHint="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnRes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint=""
            android:onClick="replyButton"
            android:textColorHint="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnRes3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint=""
            android:onClick="replyButton"
            android:textColorHint="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRes4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint=""
            android:onClick="replyButton"
            android:textColorHint="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnRes5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint=""
            android:onClick="replyButton"
            android:textColorHint="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnRes6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint=""
            android:onClick="replyButton"
            android:textColorHint="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="checkAnswer"
        android:text="Comprobar" />
</LinearLayout>