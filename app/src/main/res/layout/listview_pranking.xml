<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/lslblProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="none"
            android:maxLines="20"
            android:padding="10dp"
            android:scrollHorizontally="false"
            android:text="Producto"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="55dp"
            android:layout_height="47dp"
            android:background="@android:drawable/ic_delete"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lslblPreparacion"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Preparacion"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lslblIngredientes"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="none"
            android:maxLines="20"
            android:padding="10dp"
            android:scrollHorizontally="false"
            android:text="Ingredientes"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:layout_width="55dp"
            android:layout_height="47dp"
            android:background="@android:drawable/ic_input_add"></Button>
    </LinearLayout>

</LinearLayout>