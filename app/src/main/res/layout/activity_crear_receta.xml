<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".components.recipe.AddRecipesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C88E0533"
            android:textStyle="bold"
            android:text="Crear receta"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:textSize="28dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="Producto (Nombre de la receta)"/>

        <EditText
            android:id="@+id/txt_receta_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#606060"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="12dp"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="Ingrediente 1"/>

        <EditText
            android:id="@+id/txt_Ingrediente1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#606060"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="12dp"
            android:text=""/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="Ingrediente 2"/>

        <EditText
            android:id="@+id/txt_Ingrediente2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#606060"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="12dp"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="Ingrediente 3"/>

        <EditText
            android:id="@+id/txt_Ingrediente3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#606060"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="12dp"
            android:text=""/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="Preparacion"/>

        <EditText
            android:id="@+id/txt_Preparacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#606060"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="12dp"
            android:text=""/>


        <Button
            android:onClick="anadir_Receta"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃ±adir receta"/>


    </LinearLayout>
</LinearLayout>